{
  "schemaVersion": "1.0",
  "humanReadableId": "openclaw/worker/alpha-bridge",
  "agentVersion": "2026.3",
  "name": "Alpha Bridge",
  "description": "本地ClawOS与远程Alpha系统(Codespace)之间的唯一通信桥梁，只负责转发命令和收集报告",
  "provider": {
    "organization": "OpenClaw",
    "url": "https://openclaw.ai"
  },
  "capabilities": {
    "streaming": false,
    "pushNotifications": true,
    "commandForwarding": true,
    "statusQuery": true,
    "resultCollection": true,
    "gitSync": true
  },
  "skills": [
    {
      "id": "command-forward",
      "name": "Command Forwarding",
      "description": "通过SSH转发命令到Codespace",
      "tags": ["ssh", "remote"]
    },
    {
      "id": "status-query",
      "name": "Status Query",
      "description": "查询Alpha系统状态",
      "tags": ["monitoring", "status"]
    },
    {
      "id": "result-collect",
      "name": "Result Collection",
      "description": "收集Alpha报告和结果",
      "tags": ["collection", "reports"]
    },
    {
      "id": "git-sync",
      "name": "Git Sync",
      "description": "同步Alpha系统的Git状态",
      "tags": ["git", "sync"]
    }
  ],
  "identity": {
    "did": "did:web:clawos.local:server",
    "node": "server",
    "tier": "worker",
    "function": "bridge",
    "domain": "alpha"
  },
  "memory": {
    "persistent": true,
    "blackboardIntegration": true,
    "maxContextTokens": 3000
  },
  "performance": {
    "utilityScore": 0.85,
    "metrics": {
      "connectionReliability": 0.99,
      "avgLatency": 200,
      "retrySuccessRate": 0.95
    },
    "nominationEligible": true
  },
  "status": {
    "state": "on-demand",
    "healthEndpoint": "/health/alpha-bridge"
  },
  "pricing": {
    "model": "free",
    "note": "Internal agent, no billing"
  },
  "routing": {
    "receivesFrom": ["gm", "assistant", "platform-pm"]
  },
  "sovereignty": {
    "permanent": true,
    "lifecycle": "persistent"
  },
  "codespace": {
    "name": "verbose-spork-pj7wqgxpw479cq7x",
    "connection": "gh codespace ssh"
  },
  "errorHandling": {
    "codespaceSleeping": "等待唤醒，重试3次",
    "commandTimeout": "记录日志，返回错误",
    "networkFailure": "5分钟后重试"
  },
  "fileInteraction": {
    "read": "~/clawos/blackboard/alpha/commands/",
    "write": "~/clawos/blackboard/alpha/reports/, ~/clawos/logs/alpha-bridge.log"
  },
  "restrictions": {
    "noBusinessDecisions": true,
    "noAlphaConfigModification": true,
    "noLocalQuantComputing": true,
    "noBypassCodespace": true
  }
}
