      "rollbackCommand": "Disable cron jobs, stop evolution daemon"
    },
    "utility-scoring": {
      "enabled": true,
      "description": "Contribution value tracking and reputation system",
      "dependencies": [],
      "riskLevel": "low",
      "rollbackCommand": "Disable utility collection, use static priorities"
    },
    "memory-l3": {
      "enabled": true,
      "description": "Long-term memory with vector embeddings",
      "dependencies": [],
      "riskLevel": "medium",
      "rollbackCommand": "Revert to L1/L2 memory only"
    },
    "risk-controller": {
      "enabled": true,
      "description": "Autonomous risk assessment and mitigation",
      "dependencies": [],
      "riskLevel": "high",
      "rollbackCommand": "Disable risk automation, require manual approval"
    }
  },
  
  "featureGroups": {
    "core-v5": ["identity-system", "a2a-registry"],
    "evolution": ["evolution-scheduler", "utility-scoring"],
    "memory": ["memory-l3"],
    "safety": ["risk-controller"]
  },
  
  "rolloutPhases": {
    "phase1": ["utility-scoring"],
    "phase2": ["memory-l3", "identity-system"],
    "phase3": ["a2a-registry"],
    "phase4": ["risk-controller"],
    "phase5": ["evolution-scheduler"]
